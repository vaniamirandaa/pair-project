<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Schedule</h1>
    <a href="/getTravel">Check Your Plan</a>

    <% if (isLoggedIn) { %>
        <form method="post" action="/logout">
            <button type="submit">Logout</button>
        </form>
    <% } else { %>
        <a href="/login"><button>Login</button></a>
        <a href="/signup"><button>Sign Up</button></a>
    <% } %>

    <table>
        <tr>
            <th>Travel Agent</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure</th>
                <th>Action</th>
        </tr>
        <% schedules.forEach((e) => { %>
            <tr>
                <td><%= e.TravelAgent.name %></td>
                <td><%= e.origin %></td>  
                <td><%= e.destination %></td>
                <td><%= e.departure %></td>
                <% if (typeof userRole !== 'undefined') { %>

                <% if (userRole === 'agent') { %>
                    <td><a href="/edit/<%= e.id %>">Edit</a> | <a href="/remove/<%= e.id %>">Remove</a></td>
                <% } else if (userRole === 'customer') { %>
                    <td><a href="/book/<%= e.id %>">BOOK</a></td>
                <% } %>
                <% } %>

            </tr>
        <% })  %>
    </table>
</body>
</html>
