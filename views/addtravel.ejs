<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>

    <form action="/schedules/add" method="post" class="container mt-4">
        <div class="form-group">
            <label for="travelagent">Category</label>
            <select name="TravelAgentId" id="TravelAgentId" class="form-control">
                <option disabled selected>--Select Travel--</option>
                <% travelagents.forEach((e) => { %>
                <option value="<%= e.id %>"><%= e.travel %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="origin">Origin</label>
            <input type="text" id="origin" name="origin" class="form-control">
        </div>
        <div class="form-group">
            <label for="destination">Destination</label>
            <input type="text" id="destination" name="destination" class="form-control">
        </div>
        <div class="form-group">
            <label for="departure">Departure</label>
            <input type="datetime-local" id="departure" name="departure" class="form-control">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" class="form-control">
        </div>
        <div class="form-group">
            <label for="seatNumber">Seat Number</label>
            <input type="number" id="seatNumber" name="seatNumber" class="form-control">
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>

    <!-- Add Bootstrap JS (Optional) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
