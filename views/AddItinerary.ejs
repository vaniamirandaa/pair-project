<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Add Plan</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Add Plan</h1>
    <form action="/itineraries/add" method="POST">

      <div class="form-group">
        <label for="departure">Departure</label>
        <input type="datetime-local" id="departure" name="departure" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="scheduleId">Destination</label>
        <select id="scheduleId" name="scheduleId" class="form-control" required>
          <% schedules.forEach((schedule) => { %>
            <option value="<%= schedule.id %>"><%= schedule.destination %></option>
          <% }); %>
        </select>
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <select id="status" name="status" class="form-control" required>
          <% getStatus.forEach((e) => { %>
            <option value="<%= e.value %>"><%= e.label %></option>
          <% }); %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Add Itinerary</button>
    </form>
  </div>
</body>
</html>
